<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.custom.i18n.resources" value="app"></constant>
	<constant name="struts.multipart.maxSize" value="10485760"></constant>
	<package name="default" namespace="/" extends="struts-default">

	</package>

	<!-- Add packages here -->
	<package name="user" namespace="/admin" extends="default,json-default">
		<action name="authorityIn" class="action.AuthorityAction" method="login">
			<result name="login_success" type="redirect">/admin/index.jsp</result>
			<result name="login_failure" type="redirect">/admin/login.jsp</result>
			<result name="input">/admin/login.jsp</result>
		</action>
		<action name="authorityOut" class="action.AuthorityAction" method="logout">
			<result name="logout_success" type="redirect">/admin/login.jsp</result>
		</action>
		<action name="upload" class="action.UploadAction" method="mypic">
			<result name="upload_success">/admin/myprofile.jsp</result>
			<result name="input">/admin/myprofile.jsp</result>
			<!-- 配置拦截器限制上床文件类型及大小 -->
			<interceptor-ref name="fileUpload">
				<param name="allowedTypes">image/jpeg</param>
				<param name="maximumSize">1M</param>
				<param name="maximumSize">163840</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		<action name="fileUploadAction" class="action.FileUpload">
			<result type="json" name="success">
                <param name="contentType">
                    text/html
                </param>
            </result>
            <result type="json" name="error">
                <param name="contentType">
                    text/html
                </param>
            </result>
		</action>
	</package>


</struts>
