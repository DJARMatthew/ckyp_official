	<!-- Add packages here -->
	<package name="users" namespace="/admin" extends="default">
		<action name="authorityIn" class="action.UsersAction" method="login">
			<result name="login_success" type="redirect">/admin/index.jsp</result>
			<result name="login_failure" type="redirect">/admin/login.jsp</result>
			<result name="input">/admin/login.jsp</result>
		</action>
		<action name="authorityOut" class="action.UsersAction" method="logout">
			<result name="logout_success" type="redirect">/admin/login.jsp</result>
		</action>
		<action name="upload" class="action.FileUploadAction" method="mypic">
			<result name="upload_success" type="redirect">/admin/myprofile.jsp</result>

			<!-- 配置拦截器限制上床文件类型及大小 -->
			<interceptor-ref name="fileUpload">
				<param name="allowedTypes">image/jpeg</param>
				<param name="maximumSize">1M</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
	</package>


</struts>
